@page
@using NewcomersTask.Web.Models
@model CreateOrderRequest
@using (Html.BeginForm("create", "OrderSaga", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Order</th>
        </tr>
        <tr>
            <td>Order number: </td>
            <td>
                @Html.TextBoxFor(m => m.OrderNumber, new { type = "number", min = "0", step = "1" })
            </td>
        </tr>
        <tr>
            <td>OrderDate: </td>
            <td>
                @Html.EditorFor(model => model.OrderDate)
                @Html.ValidationMessageFor(model => model.OrderDate)
            </td>
        </tr>
        <tr>
            <td>Customer name: </td>
            <td>
                @Html.TextBoxFor(m => m.CustomerName)
            </td>
        </tr>
        <tr>
            <td>Customer surname: </td>
            <td>
                @Html.TextBoxFor(m => m.CustomerSurname)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
    <script>
        $(function () {
            $("#OrderDate").datepicker();
        });
    </script>
}